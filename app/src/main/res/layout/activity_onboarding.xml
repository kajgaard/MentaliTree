<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OnboardingActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/WelcomeTitleTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="First of all congrats!"
        android:textColor="#424242"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.171" />

    <TextView
        android:id="@+id/WelcomeTextTV"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="25dp"
        android:text="You have just taken a big step on the path to prioritizing your mental health"
        android:textAlignment="center"
        android:textColor="#424242"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/WelcomeTitleTV" />

    <Button
        android:id="@+id/goToOnboarding2btn"
        android:textAllCaps="false"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:background="@drawable/call_to_action_onboarding_btn_bg"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:text="Get started"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <LinearLayout
        android:id="@+id/navigationDots"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/WelcomeTitleTV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/dot1Iv"
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/filled_dot_icon" />

        <ImageView
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:id="@+id/dot2Iv"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/unfilled_dot_icon" />

        <ImageView
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:id="@+id/dot3Iv"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/unfilled_dot_icon" />

        <ImageView
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:id="@+id/dot4Iv"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/unfilled_dot_icon" />

        <ImageView
            android:layout_marginLeft="2dp"
            android:layout_marginRight="2dp"
            android:id="@+id/dot5Iv"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/unfilled_dot_icon" />


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>