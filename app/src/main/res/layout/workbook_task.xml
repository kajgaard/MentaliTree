<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@drawable/workbook_task_card_bg">

    <ImageView
        android:id="@+id/workbookTaskIconIv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/reflection_task_icon"
        app:layout_constraintEnd_toStartOf="@+id/workbookTaskTitleTv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/workbookTaskTitleTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="15dp"
        android:text="Affirmations about yourself"
        android:textColor="@color/blue"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/workbookTaskShortDescriptionTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="What is a positive affirmation, that reminds\n
you of your worth and your strength?"
        app:layout_constraintStart_toStartOf="@+id/workbookTaskTitleTv"
        app:layout_constraintTop_toBottomOf="@+id/workbookTaskTitleTv" />


</androidx.constraintlayout.widget.ConstraintLayout>